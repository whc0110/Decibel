<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_Linear_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/main_image_type"
            android:layout_width="760px"
            android:layout_height="0px"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="480px"
            android:layout_height="100px"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            android:src="@mipmap/launch_ad_bottom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_Linear_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/room_loading_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="400px"
            android:layout_height="550px"
            android:layout_marginTop="160px"
            android:src="@mipmap/launch_middle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300px"
            android:src="@mipmap/first_publish_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="20px"
            android:src="@mipmap/launch_bottom" />
    </LinearLayout>
</RelativeLayout>
